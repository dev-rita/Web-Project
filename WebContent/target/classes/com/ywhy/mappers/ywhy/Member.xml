<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="Member">
 
 	<!-- 아이디 중복 인증 -->
 	<select id="m_check" resultType="m">
 		select * from ywhyMember where mem_id=#{id}
 	</select>
 	
 	<!-- 이메일 중복 확인 -->
 	<select id="m_check2" resultType="m">
 		select * from ywhyMember where mem_mail=#{email}
 	</select>
 	
 	<!-- 회원 저장 -->
 	<insert id="mem_insert">
 		insert into ywhyMember (mem_id,mem_pwd,mem_name,mem_nick,mem_mail,mem_signupdate)
 		values(#{mem_id},#{mem_pwd},#{mem_name},#{mem_nick},#{mem_mail},sysdate)
 	</insert>
 	
 	<!-- 회원가입 이메일 인증 키 저장 -->
 	<update id="mem_key">
 		update ywhyMember set mem_key=#{key} where mem_id=#{id}
 	</update>
 	
 	<!-- 회원가임 이메일 인증 완료 -->
 	<update id="up_mem_key">
 		update ywhyMember set mem_key='Y' where mem_key=#{key} and mem_mail=#{email}
 	</update>
 	
 	<!-- 아이디 찾을 때 이메일 확인-->
 	<select id="mail_check" resultType="m">
 		select * from ywhyMember where mem_mail=#{find_email}
 	</select>

	<!-- 비번 찾을 때 아이디,이메일 확인 -->
	<select id="idmail_check" resultType="m">
		select * from ywhyMember where mem_id=#{mem_id} and mem_mail=#{mem_mail}
	</select>
 	
 	<!-- 비밀번호 임시수정 -->
 	<update id="edit_pwd">
 		update ywhyMember set mem_pwd=#{mem_pwd} where mem_id=#{mem_id}
 	</update>
 
	<!-- 사용자 로그인 인증 -->
	<select id="login_check" resultType="m">
		select * from ywhyMember where mem_id=#{login_id} and mem_key='Y'
	</select>
	
	<!-- id세션에 해당하는 회원정보 가져오기 -->
	<select id="mem_get" resultType="m">
		select * from ywhyMember where mem_id=#{login}
	</select>
	
	<!-- 이름,닉네임 정보수정 -->
	<update id="mem_edit">
		update ywhyMember set mem_name=#{mem_name},mem_nick=#{mem_nick} where mem_id=#{mem_id}
	</update>
	
	<!-- 회원 탈퇴 -->
	<delete id="mem_del">
		delete from ywhyMember where mem_id=#{mem_id}
	</delete>
	

 
 </mapper>